{
  "name": "my-test-runner",
  "version": "1.0.0",
  "description": "A simple test runner similar to Jest",
  "main": "dist/runner.js",
  "types": "dist/runner.d.ts",
  "bin": {
    "my-test-runner": "./dist/bin/test-runner.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "node dist/bin/test-runner.js",
    "prepare": "npm run build",
    "start:dashboard": "vite",
    "start:server": "ts-node src/server/test-server.ts",
    "dev": "concurrently \"npm run start:dashboard\" \"npm run start:server\"",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "clean": "rimraf dist",
    "build:watch": "tsc -w"
  },
  "keywords": [
    "testing",
    "test-runner",
    "jest-like"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@langchain/anthropic": "^0.1.1",
    "@langchain/core": "^0.1.48",
    "@langchain/openai": "^0.0.14",
    "@mui/icons-material": "^6.1.7",
    "@mui/material": "^6.1.7",
    "@nestjs/common": "^10.3.3",
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "express": "^4.18.3",
    "glob": "^8.0.3",
    "openai": "^4.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "ts-node": "^10.9.2",
    "upgrade": "^1.1.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.9",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/yargs": "^17.0.13",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.3",
    "vite": "^5.1.5"
  }
}
